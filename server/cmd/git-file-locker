#!/usr/bin/env bash

flag=""
user=""
file=""
branch=""
param=""
repo=""

while [[ $# -gt 0 ]]; do
    case "$1" in
        --lock=*)
            flag=$(printf '%s' "$1"| cut -d= -f2-)
            shift
            ;;
        --user=*)
            user=$(printf '%s' "$1"| cut -d= -f2-)
            shift
            ;;
        --file=*)
            file=$(printf '%s' "$1"| cut -d= -f2-)
            shift
            ;;
        --branch=*)
            branch=$(printf '%s' "$1"| cut -d= -f2-)
            shift
            ;;
        *)
            param="$param $1"
            shift
    esac
done

repo=$(printf '%s' "$param" | sed -e "s/^\(\(ht\|f\)tps\?\|ssh\):\\/\\/[^\\/]\+//" -e "s/?.*$//" -e 's/^\s\+//' -e 's/\s\+$//')



git-upload-pack $param
